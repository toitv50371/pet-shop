
  <main>
    <article>
      <section class="section section__carousel" id="home" aria-label="home">
          <div class="container">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
              <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
              </div>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="images/home_slide_2.webp" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="images/home_slide_3.webp" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="images/home_slide_5.webp" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="images/home_slide_3.webp" class="d-block w-100" alt="...">
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="visually-hidden">Next</span>
              </button>
            </div>

          </div>
      </section>
      

      <!-- 
        - #CATEGORY
      -->

      <section class="section category" aria-label="category">
        <h2 class="section-title">
          <span class="span">Lựa chọn</span> hàng đầu
        </h2>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-3">
                  <li class="scrollbar-item">
                    <a href="#product__dog">
                      <div class="category-card">
                        <figure class="card-banner img-holder">
                            <img src="./images/offer-banner-1.jpg" alt="Dog"
                            class="img-cover">
                        </figure>
        
                        <h3 class="h3">
                          <a href="#" class="card-title">Giống Chó Cảnh</a>
                        </h3>

                      </div>
                    </a>
                  </li>
                </div>
                
                <div class="col-sm-12 col-md-6 col-lg-3">
                  <li class="scrollbar-item">
                    <a href="#product__cat">
                      <div class="category-card">
                        <figure class="card-banner img-holder">
                          <img src="./images/category-2.jpg" alt="Cat"
                            class="img-cover">
                        </figure>      
                        <h3 class="h3">
                          <a href="#" class="card-title">Giống Mèo Cảnh</a>
                        </h3>
        
                      </div>
                    </a>
                  </li>
                </div>

                <div class="col-sm-12 col-md-6 col-lg-3">
                  <li class="scrollbar-item">
                    <a href="#dog__food">
                      <div class="category-card">
      
                        <figure class="card-banner img-holder">
                          <img src="./images/category-3.jpg" alt="Dog Food"
                            class="img-cover">
                        </figure>
        
                        <h3 class="h3">
                          <a href="#" class="card-title">Thức ăn cho chó</a>
                        </h3>
        
                      </div>
                    </a>
                  </li>
                </div>
    
                <div class="col-sm-12 col-md-6 col-lg-3">
                  <li class="scrollbar-item">
                    <a href="#cat__food">
                      <div class="category-card">
      
                        <figure class="card-banner img-holder">
                          <img src="./images/category-1.jpg" alt="Dog "
                            class="img-cover">
                        </figure>
        
                        <h3 class="h3">
                          <a href="#" class="card-title">Thức ăn cho mèo</a>
                        </h3>
        
                      </div>
                    </a>
                  </li>
                </div>

            </div>
        </div>        
      

        </div>
      </section>
      <!-- 
        - #OFFERS
      -->

      <section class="section offer" >
        <div class="container">
          <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4">
              <div class="offer-card">
                <img src="images/offer-banner-1.jpg" alt="" class="offer__img img-fluid">
                <div class="offer__desciption">
                  <h3 class="card-subtitle">Siêu khuyến mãi</h3>
                  <h3 class="offer__card-title">
                    Lựa chọn Boss <span class="offer__span">yêu thích</span>
                  </h3>
    
                  <a href="#" class="btn">Lựa chọn</a>
                </div>
              </div>
            </div>

            <div class="col-sm-12 col-md-4 col-lg-4">
              <div class="offer-card">
                <img src="images/offer-banner-2.jpg" alt="" class="offer__img img-fluid">
                <div class="offer__desciption">
                  <h4 class="card-subtitle">Siêu khuyến mãi</h4>
                  <h3 class="offer__card-title">
                    Lựa chọn Boss <span class="offer__span">yêu thích</span>
                  </h3>
    
                  <a href="#" class=" btn">Lựa chọn</a>
                </div>
              </div>
            </div>

            <div class="col-sm-12 col-md-4 col-lg-4">
              <div class="offer-card">
                <img src="images/offer-banner-food.jpg" alt="" class="offer__img img-fluid ">
                <div class="offer__desciption">
                  <h3 class="card-subtitle">Siêu khuyến mãi</h3>
                  <h3 class="offer__card-title">
                    Lựa chọn Boss <span class="offer__span">yêu thích</span>
                  </h3>
    
                  <a href="#" class=" btn">Lựa chọn</a>
                </div>
              </div>
            </div>

          </div>
      
        </div>
      </section>


      <!-- 
        - #PRODUCT
      -->
      <!-- Dog  -->
      <section class="section product" id="product__dog" aria-label="product">
        <div class="container">

            <h2 class="h2 section-title">
            Giống<span class="span"> Chó Cảnh</span> 
            </h2>
            <div class="row">
                
              {{#each pets}}
                {{#xif this.type 'dog'}}
                <div class="col-sm-12 col-md-6 col-lg-3">
                    <li class="scrollbar-item">
                    <div class="category-card product__pet">

                        <figure class="card-banner img-holder product__pet-img">
                          <a href="pets/{{this.slug}}"> 
                            <img src="{{this.img}}" 
                                class="img-cover ">
                          </a>
                        </figure>

                        <a href="pets/{{this.slug}}">
                          <h3 class="h3 card-title">{{this.name}}</h3>
                        </a>

                    </div>
                    </li>
                </div>
                {{/xif}}
              {{/each}}
            </div>


        </div>
      </section>

      <!-- Cat -->
      <section class="section product" id="product__cat" aria-label="product">
        <div class="container">

          <h2 class="h2 section-title">
            Giống<span class="span"> Mèo Cảnh</span> 
          </h2>
          <div class="row">
              {{#each pets}}
                {{#xif this.type 'cat'}}
                <div class="col-sm-12 col-md-6 col-lg-3">
                    <li class="scrollbar-item">
                    <div class="category-card product__pet">

                        <figure class="card-banner img-holder product__pet-img">
                          <a href="pets/{{this.slug}}"> 
                            <img src="{{this.img}}" 
                                class="img-cover ">
                          </a>
                        </figure>

                        <a href="pets/{{this.slug}}">
                          <h3 class="h3 card-title">{{this.name}}</h3>
                        </a>

                    </div>
                    </li>
                </div>
                {{/xif}}
              {{/each}}
              

          </div>

        </div>
      </section>
      <section class="section service" aria-label="service">
        <div class="container">

          <img src="./images/service-image.png" width="122" height="136" loading="lazy" alt="" class="img">
  
          <h2 class="h2 section-title">
            <span class="span">Thú cưng thích gì</span>
            <p>Pet Shop có đó...</p>
          </h2>
        </div>
      </section>
      


      <!-- Dog food -->
      <section class="section" id="dog__food" aria-label="product">
        <div class="container">

          <h2 class="h2 section-title">
            Thức ăn cho<span class="span"> Boss</span> 
          </h2>
          <div class="row">
            {{#each foods}}
                {{#xif this.type 'dog'}}
                <div class="col-sm-12 col-md-6 col-lg-3">
                  <li class="scrollbar-item">
                    <div class="category-card  product__pet">
      
                      <figure class="card-banner img-holder product__pet-img">
                        <a href="foods/{{this.slug}}">
                          <img src="{{this.img}}" class="img-cover">
                        </a>
                      </figure>

                      <a href="foods/{{this.slug}}">
                        <p class="pet__food-description">
                          {{this.name}}
                        </p>
                      </a>
                      
                      <p class="pet__food-price">
                        {{this.price}}đ
                      </p>
      
                    </div>
                  </li>
                </div>
                {{/xif}}
              {{/each}}
          </div>

        </div>
      </section>

      <!-- 
        - #CTA
      -->

      <section class="cta has-bg-image" aria-label="cta">
        <img src="images/cta-bg.jpg" alt="" class="cta__bg">

        </div>
      </section>
      <!-- Cat food -->
      <section class="section" id="cat__food" aria-label="product">
        <div class="container">

          <h2 class="h2 section-title">
            Thức ăn cho<span class="span"> Hoàng Thượng</span> 
          </h2>
          <div class="row">
            {{#each foods}}
                {{#xif this.type 'cat'}}
                <div class="col-sm-12 col-md-6 col-lg-3">
                  <li class="scrollbar-item">
                    <div class="category-card  product__pet">
      
                      <figure class="card-banner img-holder product__pet-img">
                        <a href="foods/{{this.slug}}">
                          <img src="{{this.img}}" class="img-cover">
                        </a>
                      </figure>

                      <a href="foods/{{this.slug}}">
                        <p class="pet__food-description">
                          {{this.name}}
                        </p>
                      </a>
                      
                      <p class="pet__food-price">
                        {{this.price}}đ
                      </p>
      
                    </div>
                  </li>
                </div>
                {{/xif}}
              {{/each}}
          </div>
        </div>
      </section>
      <!-- 
        - #SERVICE
      -->

